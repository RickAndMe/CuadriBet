# JWT Secret Key
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=8000
NODE_ENV=production

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL (will be set by platform)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Database Configuration

# For development and simple deployments (SQLite - recommended for persistence)
DATABASE_NAME=bets.db
DATABASE_TYPE=sqlite

# For more complex deployments, use these alternatives:

# PostgreSQL (para Railway, Heroku, DigitalOcean, etc.)
# DATABASE_TYPE=postgresql
# PG_HOST=your_postgres_host
# PG_PORT=5432
# PG_DATABASE=your_database_name
# PG_USER=your_username
# PG_PASSWORD=your_password
# PG_SSL=true

# MySQL/MariaDB (para AWS RDS, GCP Cloud SQL, etc.)
# DATABASE_TYPE=mysql
# MYSQL_HOST=your_mysql_host
# MYSQL_PORT=3306
# MYSQL_DATABASE=your_database_name
# MYSQL_USER=your_username
# MYSQL_PASSWORD=your_password

# SQLite for production (if you want to persist as file)
# DATABASE_TYPE=sqlite
# DATABASE_PATH=/path/to/persistent/storage/cuadribet.db
